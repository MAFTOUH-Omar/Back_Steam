{
    "openapi": "3.0.0",
    "info": {
        "title": "Steam Back Payment API",
        "version": "1.0.0",
        "description": "Documentation de l'API de paiement de Steam Back"
    },
    "tags": [
        {
            "name": "Payment",
            "description": "Endpoints liés au paiement"
        }
    ],
    "paths": {
        "/paypal/{idSubscription}": {
            "post": {
                "summary": "Effectuer un paiement PayPal",
                "description": "Effectue un paiement PayPal pour un abonnement spécifié.",
                "tags": ["Payment"],
                "parameters": [
                    {
                        "name": "idSubscription",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "ID de l'abonnement pour lequel effectuer le paiement"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paiement effectué avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "description": "Indique si le paiement a été effectué avec succès"
                                        },
                                        "message": {
                                            "type": "string",
                                            "description": "Message décrivant le résultat du paiement"
                                        },
                                        "paypalUrl": {
                                            "type": "string",
                                            "description": "URL de redirection vers PayPal pour finaliser le paiement"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        }
    }
}