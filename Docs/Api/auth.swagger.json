{
    "openapi": "3.0.0",
    "info": {
        "title": "Steam Back User Authentification API",
        "version": "3.0.0",
        "description": "Documentation de l'API d'athentification utilisateurs de Steam Back"
    },
    "tags": [
        {
            "name": "User Authentification",
            "description": "Les endpoints liés à authentiication user"
        }
    ],
    "paths" : {
        "/auth/signup": {
            "post": {
                "summary": "Inscription utilisateur",
                "description": "Crée un nouveau compte utilisateur.",
                "tags": ["User Authentification"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "FullName" : "String"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Utilisateur inscrit avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "FullName" : "String"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Paramètres d'entrée non valides"
                    }
                }
            }
        },
        "/auth/signin": {
            "post": {
                "summary": "Connexion utilisateur",
                "description": "Connectez-vous à votre compte utilisateur existant.",
                "tags": ["User Authentification"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserSignIn"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Utilisateur connecté avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Identifiants invalides"
                    }
                }
            }
        },
        "/auth/confirm-signup/{token}": {
            "get": {
                "summary": "Confirmation d'inscription",
                "description": "Confirme l'inscription d'un utilisateur via le jeton d'activation.",
                "tags": ["User Authentification"],
                "parameters": [
                    {
                        "name": "token",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Jeton d'activation de l'utilisateur"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Confirmation réussie de l'inscription"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        },
        "/auth/profile": {
            "put": {
                "summary": "Mise à jour du profil utilisateur",
                "description": "Met à jour le profil de l'utilisateur actuellement connecté.",
                "tags": ["User Authentification"],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProfileUpdate"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Profil utilisateur mis à jour avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requête invalide"
                    },
                    "401": {
                        "description": "Non autorisé"
                    },
                    "404": {
                        "description": "Utilisateur non trouvé"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        }
    }
}