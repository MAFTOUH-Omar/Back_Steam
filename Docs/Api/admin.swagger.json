{
    "tags": [
        {
            "name": "Admin",
            "description": "Les endpoints liés à l'administration"
        }
    ],
    "paths": {
        "/signin": {
            "post": {
                "summary": "Connexion administrateur",
                "description": "Connectez-vous à votre compte administrateur existant.",
                "tags": ["Admin"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AdminSignIn"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Admin connecté avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AdminResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Identifiants invalides"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        },
        "/verify-code": {
            "post": {
                "summary": "Vérification du code",
                "description": "Vérifie le code de vérification envoyé à l'administrateur.",
                "tags": ["Admin"],
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Adresse e-mail de l'administrateur"
                    },
                    {
                        "name": "code",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Code de vérification"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Code de vérification valide",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/VerificationResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Code de vérification invalide ou expiré"
                    },
                    "404": {
                        "description": "Admin introuvable"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        },
        "/profile/{adminId}": {
            "put": {
                "summary": "Mise à jour du profil administrateur",
                "description": "Met à jour le profil de l'administrateur spécifié.",
                "tags": ["Admin"],
                "parameters": [
                    {
                        "name": "adminId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID de l'administrateur"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AdminUpdateProfile"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Profil administrateur mis à jour avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AdminResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requête invalide"
                    },
                    "401": {
                        "description": "Non autorisé"
                    },
                    "404": {
                        "description": "Admin non trouvé"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        },
        "/allAdmins": {
            "get": {
                "summary": "Récupérer tous les administrateurs",
                "description": "Récupère tous les administrateurs enregistrés dans le système.",
                "tags": ["Admin"],
                "responses": {
                    "200": {
                        "description": "Liste des administrateurs récupérée avec succès"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        },
        "/delete/{adminId}": {
            "delete": {
                "summary": "Supprimer l'administrateur",
                "description": "Supprime l'administrateur spécifié.",
                "tags": ["Admin"],
                "parameters": [
                    {
                        "name": "adminId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID de l'administrateur"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Admin supprimé avec succès"
                    },
                    "404": {
                        "description": "Admin non trouvé"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        },
        "/update-admin/{id}": {
            "put": {
                "summary": "Mise à jour de l'administrateur par ID",
                "description": "Met à jour l'administrateur spécifié par ID.",
                "tags": ["Admin"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID de l'administrateur"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AdminUpdateByID"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Admin mis à jour avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AdminResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requête invalide"
                    },
                    "404": {
                        "description": "Admin non trouvé"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        },
        "/password-reset/{id}": {
            "post": {
                "summary": "Réinitialisation du mot de passe de l'administrateur",
                "description": "Réinitialise le mot de passe de l'administrateur spécifié.",
                "tags": ["Admin"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID de l'administrateur"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "E-mail de réinitialisation de mot de passe envoyé avec succès"
                    },
                    "404": {
                        "description": "Admin non trouvé"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        }
    }
}