{
    "openapi": "3.0.0",
    "info": {
        "title": "Steam Back Service API",
        "version": "1.0.0",
        "description": "Documentation de l'API de services de Steam Back"
    },
    "tags": [
        {
            "name": "Service",
            "description": "Endpoints liés aux services"
        }
    ],
    "paths": {
        "/service/all": {
            "get": {
                "summary": "Obtenir tous les services",
                "tags": ["Service"],
                "responses": {
                    "200": {
                        "description": "Liste de tous les services",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "_id": { "type": "string", "description": "ID du service" },
                                            "name": { "type": "string", "description": "Nom du service" },
                                            "active": { "type": "boolean", "description": "Statut d'activité du service" },
                                            "packageCount": { "type": "number", "description": "Nombre de packages disponibles pour ce service" },
                                            "packages": {
                                                "type": "array",
                                                "items": { "$ref": "#/components/schemas/Package" },
                                                "description": "Liste des packages disponibles pour ce service"
                                            },
                                            "ServicePicture": { "type": "string", "description": "URL de l'image du service" }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        },
        "/service/{serviceId}": {
            "get": {
                "summary": "Obtenir un service par ID",
                "tags": ["Service"],
                "parameters": [
                    {
                        "name": "serviceId",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" },
                        "description": "ID du service à récupérer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Service trouvé",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/Service" }
                            }
                        }
                    },
                    "404": {
                        "description": "Service non trouvé"
                    },
                    "500": {
                        "description": "Erreur interne du serveur"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Service": {
                "type": "object",
                "properties": {
                    "_id": { "type": "string", "description": "ID du service" },
                    "name": { "type": "string", "description": "Nom du service" },
                    "active": { "type": "boolean", "description": "Statut d'activité du service" },
                    "ServicePicture": { "type": "string", "description": "URL de l'image du service" }
                }
            },
            "Package": {
                "type": "object",
                "properties": {
                    "_id": { "type": "string", "description": "ID du package" }
                }
            }
        }
    }
}
